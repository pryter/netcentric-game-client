{
  "name": "iq180-client",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "server": "./scripts/server.sh",
    "build-app": "next build --turbopack && bun run dist",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.poppa.iq180-game",
    "productName": "iq180-game",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "package.json"
    ],
    "asarUnpack": ["out"]
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@types/culori": "^4.0.1",
    "class-variance-authority": "^0.7.1",
    "classnames": "^2.5.1",
    "culori": "^4.0.2",
    "firebase": "^12.3.0",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.545.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "typescript": "^5",
    "tailwindcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@tailwindcss/postcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "@eslint/eslintrc": "^3",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "express": "^5.1.0"
  }
}
